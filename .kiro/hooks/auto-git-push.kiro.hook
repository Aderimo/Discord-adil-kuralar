{
  "enabled": true,
  "name": "Otomatik Git Push",
  "description": "Agent işlemi tamamlandığında otomatik olarak git add, commit ve push yapar",
  "version": "1",
  "when": {
    "type": "agentStop"
  },
  "then": {
    "type": "runCommand",
    "command": "git add -A && git commit -m \"Auto-commit: Updates from Kiro\" --allow-empty && git push origin main"
  },
  "workspaceFolderName": "modluk kuralları",
  "shortName": "auto-git-push"
}