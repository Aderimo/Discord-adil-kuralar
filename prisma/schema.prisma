// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Role Model - Dinamik rol tanımları
// Requirement: Dinamik rol yönetim sistemi
model Role {
  id          String   @id @default(cuid())
  code        String   @unique // reg, op, gk, council, gm, gm_plus, owner
  name        String   // Regülatör, Operatör, etc.
  shortName   String   // REG, OP, GK, etc.
  description String
  hierarchy   Int      // 1-7 (daha yüksek = daha yetkili)
  color       String   @default("#5865F2") // Discord rengi
  permissions String   @default("[]") // JSON array of permission codes
  isSystem    Boolean  @default(false) // Sistem rolleri silinemez
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users User[]

  @@map("roles")
}

// User Model - Kullanıcı bilgileri ve yetkilendirme
model User {
  id               String    @id @default(cuid())
  username         String    @unique
  email            String    @unique
  passwordHash     String
  status           String    @default("pending") // pending, approved, rejected
  roleId           String?   // Dinamik rol ilişkisi
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  lastLoginAt      DateTime?
  resetToken       String?   // Şifre sıfırlama token'ı
  resetTokenExpiry DateTime? // Token geçerlilik süresi

  // İlişkiler
  role          Role?          @relation(fields: [roleId], references: [id])
  sessions      Session[]
  activityLogs  ActivityLog[]
  notifications Notification[]

  @@map("users")
}

// Session Model - Oturum yönetimi
model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  // İlişkiler
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("sessions")
}

// ActivityLog Model - Aktivite logları
model ActivityLog {
  id        String   @id @default(cuid())
  userId    String
  action    String // login, logout, view_content, search, ai_query, role_change, user_approve, user_reject, copy_content, copy_template, edit_content, delete_content, create_role, edit_role, delete_role, view_logs, export_logs
  details   String   @default("{}") // JSON string olarak saklanır
  ipAddress String
  timestamp DateTime @default(now())

  // İlişkiler
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([action])
  @@index([timestamp])
  @@map("activity_logs")
}

// Notification Model - Bildirim sistemi
// Requirement 9: Bildirim Sistemi
model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String   // new_registration, content_change, role_change, system
  title     String
  message   String
  data      String   @default("{}") // JSON string olarak saklanır
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  // İlişkiler
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([read])
  @@index([createdAt])
  @@map("notifications")
}
